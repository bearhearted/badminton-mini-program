<!--pages/index/point/confirm.wxml-->
<view class="body-view">
  <view class="info-view">
    <view class="pic-view">
      <image src="{{pic}}" class="image_view" />
    </view>
    <view class="intro-view">您正在兑换[{{name}}]，需要消耗[{{point}}]积分，购买后您的积分变为[{{left}}]。</view>
    <view class="confirm-view">
      <button style="width: 200rpx;" size="default" type="primary" bindtap="order">确定</button>
    </view>
  </view>
</view>