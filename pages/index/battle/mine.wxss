/* pages/index/mybattle.wxss */
.body-view {
  height: 100vh;
}
.head-view {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 44px;
  border-top: 5rpx solid #cccccc;
  border-bottom: 5rpx solid #cccccc;
}
.point-entity-view {
  font-size:32rpx;
  width: 100%;
  display: flex;
  justify-content:left;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 3rpx solid #cccccc;
}
.point-date-view {
  text-align: center;
  width: 180rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin: 0 10rpx;
}
.point-teammate-view {
  width: 150rpx;
  text-align: left;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin:0 20rpx;
}
.point-teammate-view-center {
  width: 150rpx;
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin:0 20rpx;
}
.point-vs-view {
  width: 30rpx;
  text-align: left;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.point-opponent-view {
  width: 180rpx;
  text-align: left;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 50rpx;
}
.point-opponent-view-center {
  width: 180rpx;
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 50rpx;
}
.point-result-view {
  text-align: center;
  width: 110rpx;
  height: 100%;
  display: flex;
  justify-content:center;
  align-items: center;
  margin: 0 10rpx;
}
.button-view {
  padding: 20rpx;
}
.wait-view {
  padding-top: 50rpx;
  text-align: center;
}
.join-battle-view {
  color:darksalmon;
}