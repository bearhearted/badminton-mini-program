/* pages/index/challenge.wxss */
.no-event-view {
  text-align: center;
  text-size-adjust: 100rpx;
}
.wait-view {
  padding-top:50px;
}
.body-list-view {
  background-color: #f6f6f6;
  margin: 10rpx 0;
}
.event-challenge-view {
  background-color:#f6f6f6;
  border-bottom: 5rpx solid #f6f6f6;
}
.event-detail-view {
  padding: 5px;
  border-bottom: 5rpx solid #cccccc;
}
.event-head-view {
  font-size: large;
  text-align: center;
}
.challenge-list-view {
  font-size: small;
  margin-left: 20rpx;
  margin-bottom: 5rpx;
}
.challenge-detail-view {
  background-color: #e4d5c6;
  font-size: small;
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
  margin: 10rpx 0;
}
.challenge-index-view {
  text-align: center;
  font-size: medium;
  margin: 10rpx 0;
}
.challenge-body-view {
  font-size: small;
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
}
.challenge-line-view {
  width: 96%;
  height: 3rpx;
  background-color:#bbbbbb;
}
.challenge-column-view {
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 300rpx;
  padding-left: 20rpx;
}
.challenge-challengers {
  font-size: small;
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left-challenger-avatar {
  width: 58rpx;
  height: 58rpx;
  clip-path: circle(38rpx at center);
  margin-left: 50rpx;
}
.left-challenger-name {
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 150rpx;
  padding-right: 20rpx;
}
.challenge-vs {
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 50rpx;
}
.right-challenger-avatar {
  width: 58rpx;
  height: 58rpx;
  clip-path: circle(38rpx at center);
  margin-right: 50rpx;
}
.right-challenger-name {
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 150rpx;
  padding-right: 20rpx;
}
.voter-list-view {
  width: 280rpx;
  display: flex;
  justify-content:left;
  flex-direction: column;
  align-items: left;
  margin-top: 20rpx;
}
.challenge-voter-list {
  width: 280rpx;
  display: flex;
  justify-content:left;
  flex-direction: row;
  align-items: left;
  margin-top: 2rpx;
}
.challenge-voter {
  margin: 0 2rpx;
}
.voter-avatar-image {
  width: 40rpx;
  height: 40rpx;
  clip-path: circle(38rpx at center);
}
.vote_number_view {
  font-size:x-small;
  margin-bottom: 10rpx;
}
.vote-view {
  width: 200rpx;
  margin-left:40rpx;
  background-color: #ddeebb;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}
.challenge-add-view {
  padding: 10rpx 0;
}
.submit-button {
  width: auto;
}