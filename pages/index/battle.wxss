/* pages/index/challenge.wxss */
.no-event-view {
  text-align: center;
  text-size-adjust: 100rpx;
}
.wait-view {
  padding-top:50px;
}
.body-list-view {
  background-color: #eeeeee;
  margin: 10rpx 0;
}
.event-challenge-view {
  background-color:#ffffff;
  border-bottom: 5rpx solid #eeeeee;
}
.event-detail-view {
  padding: 5px;
}
.event-head-view {
  font-size: large;
  text-align: center;
}
.challenge-list-view {
  font-size: small;
  margin-left: 20rpx;
  margin-bottom: 5rpx;
}
.challenge-detail-view {
  color:#efefef;
  background-color: #4b4b4b;
  font-size: small;
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  border-bottom: 5rpx solid #eeeeee;
}
.challenge-index-view {
  text-align: center;
  font-size: medium;
  margin: 10rpx 0;
}
.challenge-body-view {
  font-size: small;
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
}
.challenge-line-view {
  width: 96%;
  height: 3rpx;
  background-color:#bbbbbb;
}
.challenge-column-view {
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 300rpx;
  padding-left: 20rpx;
}
.challenge-challengers {
  font-size: small;
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left-challenger-avatar {
  width: 58rpx;
  height: 58rpx;
  clip-path: circle(38rpx at center);
  margin-left: 50rpx;
}
.left-challenger-name {
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 150rpx;
  padding-right: 20rpx;
}
.challenge-vs {
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 50rpx;
}
.right-challenger-avatar {
  width: 58rpx;
  height: 58rpx;
  clip-path: circle(38rpx at center);
  margin-right: 50rpx;
}
.right-challenger-name {
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 150rpx;
  padding-right: 20rpx;
}
.voter-list-view {
  width: 280rpx;
  display: flex;
  justify-content:left;
  flex-direction: column;
  align-items: left;
  margin-top: 20rpx;
}
.challenge-voter-list {
  width: 280rpx;
  display: flex;
  justify-content:left;
  flex-direction: row;
  align-items: left;
  margin-top: 2rpx;
}
.challenge-voter {
  margin: 0 2rpx;
}
.voter-avatar-image {
  width: 40rpx;
  height: 40rpx;
  clip-path: circle(38rpx at center);
}
.vote_number_view {
  font-size:xx-small;
  margin-bottom: 10rpx;
}
.vote-view {
  width: 200rpx;
  margin-left:40rpx;
  background-color: #aaaaaa;
  margin-bottom: 20rpx;
}