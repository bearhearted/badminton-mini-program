/* pages/index/point.wxss */
.body-view {
  background-color:white;
}
.head-view {
  font-size: large;
  background-color: #66dd99;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 44px;
  border-bottom: 10rpx solid #2f7c11;
}
.rule-view {
  font-size: small;
  color: #21117c;
}
.body-list-view {
  background-color: #ffffff;
}
.point-list-view {
  background-color: #216307;
}
.point-entity-view {
  background-color: #76d49a;
  font-size:medium;
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 5rpx solid #7de455;
}
.point-avatar-view {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-left: 50rpx;
}
.avatar-image {
  width: 80rpx;
  height: 80rpx;
}
.point-name-view {
  text-align: left;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 500rpx;
  padding-left: 50rpx;
}
.point-point-view {
  width: 150rpx;
  height: 100%;
  display: flex;
  justify-content:center;
  align-items: center;
  margin-right: 10rpx;
  border-radius: 5px;
}