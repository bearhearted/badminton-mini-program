/* pages/index/rule.wxss */
.body-view {
	height: 100vh;
  background-color:#76d49a;
}
.head-view {
  background-color: #66dd99;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 44px;
  border-bottom: 10rpx solid #2f7c11;
}
.body-list-view {
  background-color: #76d49a;
}
.point-list-view {
  background-color: #216307;
}
.point-entity-view {
  background-color: #76d49a;
  font-size:medium;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 5rpx solid #333333;
}
.rule-index-view {
  text-align: left;
  width: 100rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 50rpx;
}
.rule-desc-view {
  width: 600rpx;
  height: 100%;
  display: flex;
  justify-content:center;
  align-items: center;
  margin-right: 10rpx;
  border-radius: 5px;
}